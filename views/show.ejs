<% include ./partials/header %>
<div class="box">
    <div class="container">
        <div class="title"><%= article.title %></div>
        <figure class=" image">
            <img src="<%= article.image %>">
        </figure>
        <div class="container"><%= article.body %></div>
            <div class="field">
                <div class="control">
                    <a class="button is-warning" href="/articles/<%= article._id %>/edit">Edit</a>
                </div>
            </div>
            <form action="/articles/<%= article._id %>?_method=DELETE" method="POST">
                <div class="field">
                    <div class="control">
                        <button class="button is-danger">DELETE</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>