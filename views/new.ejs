<% include ./partials/header %>
    <form class="box container" action="/articles" method="POST">
        <div class="field">
            <label class="label">Title</label>
            <div class="control">
                <input class="input" name="article[title]" type="text" placeholder="Crypto Has Replaced Money!">
            </div>
        </div>
            
        <div class="field">
            <label class="label">Image URL</label>
            <div class="control">
                <input class="input" type="text" name="article[image]" placeholder="Image Url Here">
            </div>
        </div>

        <div class="field">
            <label class="label">Body</label>
            <div class="control">
                <textarea class="textarea" name="article[body]" placeholder="10 lines of textarea" rows="10"></textarea>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <input class="button is-success" type="submit">
            </div>
        </div>
    </form>
<% include ./partials/footer %>