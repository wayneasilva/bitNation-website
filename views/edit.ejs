<% include ./partials/header %>
    <form class="box container" action="/articles/<%= article._id %>?_method=PUT" method="POST">
        <div class="field">
            <label class="label">Title</label>
            <div class="control">
                <input class="input"  name="article[title]" type="text" value="<%= article.title %>">
            </div>
        </div>
            
        <div class="field">
            <label class="label">Image URL</label>
            <div class="control">
                <input class="input" type="text" name="article[image]" value="<%= article.image %>">
            </div>
        </div>

        <div class="field">
            <label class="label">Article Body</label>
            <div class="control">
                <textarea class="textarea" name="article[body]" rows="10"><%= article.body %></textarea>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <input class="button is-success" type="submit">
            </div>
        </div>
    </form>
<% include ./partials/footer %>